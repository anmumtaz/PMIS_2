<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".UsersAdmin">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@color/theme"
        android:orientation="horizontal">
        <ImageButton
            android:id="@+id/btnback1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_baseline_arrow_back_24"
            android:background="@drawable/ic_baseline_arrow_back_24"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="15dp"/>

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/registext"
        android:text="User Registration"
        android:textColor="@color/black"
        android:textSize="23dp"
        android:textStyle="bold"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="20dp"/>
    <TextView
        android:id="@+id/name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/registext"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        android:text="Name"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newname_layout"
        android:layout_below="@id/name"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/light_blue">
        <EditText
            android:hint="Enter Name"
            android:id="@+id/newname"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp"
            android:inputType="textCapWords"/>
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newname_layout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        android:text="Email"
        android:textColor="@color/black"
        android:textSize="20dp" />

    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newemail_layout"
        android:layout_below="@id/email"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/light_blue">

        <EditText
            android:hint="Enter Email"
            android:id="@+id/newemail"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>
    <TextView
        android:id="@+id/password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newemail_layout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        android:text="Password"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newpass_layout"
        android:layout_below="@id/password"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/light_blue">

        <EditText
            android:hint="Enter Password"
            android:id="@+id/newpass"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <TextView
        android:id="@+id/usertype"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/newpass_layout"
        android:layout_marginTop="8dp"
        android:layout_marginLeft="28dp"
        android:text="Usertype"
        android:textColor="@color/black"
        android:textSize="20dp" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/newusertype_layout"
        android:layout_below="@id/usertype"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        app:boxBackgroundColor="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeColor="@color/light_blue">

        <EditText
            android:hint="User Type"
            android:id="@+id/newusertype"
            android:layout_width="350dp"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="20dp" />
    </com.google.android.material.textfield.TextInputLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnregist"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/newusertype_layout"
        android:layout_marginTop="50dp"
        android:background="@color/light_blue"
        android:text="Regist User"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnseeusers"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_below="@id/btnregist"
        android:layout_marginTop="50dp"
        android:background="@color/lighter_blue"
        android:text="See Registered Users"
        android:textSize="20dp"
        android:textColor="@color/black"
        android:layout_centerInParent="true"/>

</RelativeLayout>